#!/bin/bash

[ ! -d scripts ] && cd ..

# Works only with gnome terminal and xterm for now
resize_terminal() {
  terminal_cmd=$1
  geometry=$2
  echo -e "\nResizing terminal.. (this will open a new terminal)"
  sleep 0.5
  $terminal_cmd $geometry 85x25
  echo -e "Done!\n"
  exit
}

if [[ $(cat /etc/alternatives/x-terminal-emulator | grep exec | grep gnome) ]]; then
  resize_terminal gnome-terminal --geometry
fi

if [[ $(cat /etc/alternatives/x-terminal-emulator | grep exec | grep xterm) ]]; then
  resize_terminal xterm -geometry
fi

echo "Terminal not recognized."
